function prompt {
  function Add-Segment {
      param (
          [int]$bg,
          [int]$fg,
          [string]$text,
          [string]$icon = "",
          [int]$nextBg = 0
      )
      $sep = "î‚° "
      $start = "`e[48;5;${bg};38;5;${fg}m"
      $end = "`e[48;5;${nextBg};38;5;${bg}m$sep"
      return "$start $icon$text $end"
  }

  $reset = "`e[0m"

  # Time
  $time = (Get-Date).ToString("hh:mmtt")
  $timeSegment = Add-Segment -bg 240 -fg 15 -text " $time " -icon "ï€—" -nextBg 190  # light green nextBg for venv/conda

  # Decide next segment color based on whether Git exists
  $gitExists = git rev-parse --is-inside-work-tree 2>$null
  $nextBg = if ($gitExists) { 27 } else { 0 }  # Blue if Git exists, otherwise default background

  # Python venv
  $pythonSegment = ""
  if ($env:VIRTUAL_ENV) {
      $venv = Split-Path -Leaf $env:VIRTUAL_ENV
      $pythonSegment = Add-Segment -bg 190 -fg 0 -text " $venv " -icon "îˆµ" -nextBg 99  # light green bg
  }

  # Conda env
  $condaSegment = ""
  if ($env:CONDA_DEFAULT_ENV -and !$env:VIRTUAL_ENV) {
      $condaSegment = Add-Segment -bg 190 -fg 0 -text " $($env:CONDA_DEFAULT_ENV) " -icon "ğŸ" -nextBg 99  # light green bg
  }

  # Current dir
  $cwd = Split-Path -Leaf (Get-Location)
  $cwdSegment = Add-Segment -bg 99 -fg 15 -text " $cwd " -icon "î—¿" -nextBg $nextBg  # Soft violet bg, dynamic nextBg

  # Git segment (if present)
  $gitSegment = ""
  if ($gitExists) {
      $branch = git rev-parse --abbrev-ref HEAD 2>$null
      $dirty = if (git status --porcelain 2>$null) { " *" } else { "" }
      $gitSegment = Add-Segment -bg 27 -fg 15 -text " $branch$dirty " -icon "ï˜" -nextBg 0  # Blue bg
  }

  # Final prompt
  "$timeSegment$pythonSegment$condaSegment$cwdSegment$gitSegment$reset`nâ¯ "
}
